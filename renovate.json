{
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^component\\.yaml$"],
      "matchStrings": [
        "componentName: (?<componentName>.+)\\s+name: (?<name>.+)\\s+version: \"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "{{{ componentName }}}",
      "versioningTemplate": "semver",
      "lookupNameTemplate": "ocmtest.common.repositories.cloud.sap/d032990/component-descriptors/{{{ componentName }}}",
      "extractVersionTemplate": "{{{ currentValue }}}"
    }
  ],
  "hostRules": [
    {
      "hostType": "docker",
      "hostName": "ocmtest.common.repositories.cloud.sap",
      "username": "your-username",
      "password": "your-password"
    }
  ]
}