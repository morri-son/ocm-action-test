{
  "extends": [
    "config:base"
  ],
  "customManagers": {
    "ocmComponentManager": {
      "fileMatch": ["^component\\.yaml$"],
      "extractPackageName": {
        "regex": "componentName: (.+)",
        "replace": "$1"
      },
      "extractVersion": {
        "regex": "version: \"([^\"]+)\"",
        "replace": "$1"
      },
      "datasource": "ocmComponents",
      "versioning": "semver"
    }
  },
  "datasources": {
    "ocmComponents": {
      "fileMatch": ["^component\\.yaml$"],
      "extractVersion": {
        "regex": "componentName: (.+)",
        "replace": "$1"
      },
      "urlTemplate": "https://ocmtest.common.repositories.cloud.sap/v2/d032990/component-descriptors/{{{componentName}}}/tags/list",
      "responseType": "json",
      "versioning": "semver"
    }
  },
  "packageRules": [
    {
      "matchManagers": ["ocmComponentManager"],
      "matchPackageNames": ["*"],
      "enabled": true,
      "updateTypes": ["major", "minor", "patch"]
    }
  ]
}
