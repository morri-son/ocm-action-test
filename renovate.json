{
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^component\\.yaml$"],
      "matchStrings": [
        "componentName: (?<componentName>.+)\\s+name: (?<name>.+)\\s+version: \"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "ocmComponents",
      "depNameTemplate": "{{{ componentName }}}",
      "versioning": "semver",
      "extractVersionTemplate": "{{{ currentValue }}}"
    }
  ],
  "datasources": {
    "ocmComponents": {
      "fileMatch": ["^component\\.yaml$"],
      "extractVersion": {
        "regex": "componentName: (.+)",
        "replace": "$1"
      },
      "urlTemplate": "https://ocmtest.common.repositories.cloud.sap/v2/d032990/component-descriptors/{{{componentName}}}/tags/list",
      "responseType": "json",
      "versioning": "semver"
    }
  }
}