{
  "extends": [
    "config:base"
  ],
  "datasources": {
    "ocmComponents": {
      "fileMatch": ["^component\\.yaml$"],
      "extractVersion": {
        "regex": "componentName: (.+)",
        "replace": "$1"
      },
      "urlTemplate": "https://ocmtest.common.repositories.cloud.sap/v2/d032990/component-descriptors/{{{componentName}}}/tags/list",
      "responseType": "json",
      "versioning": "semver"
    }
  },
  "packageRules": [
    {
      "matchDatasources": ["ocmComponents"],
      "matchPackageNames": ["*"],
      "enabled": true
    }
  ]
}
