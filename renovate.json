{
  "extends": [
    "config:recommended", ":dependencyDashboard", "group:allNonMajor"
  ],
  "ignorePaths": [
    ".github/workflows/**"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^root-component\\.yaml$"],
      "datasourceTemplate": "custom.oci-artifact",
      "matchStrings": [
        "-\\s*componentName:\\s*(?<depName>[^\\n]+)\\s*\\n\\s*name:\\s*[^\\n]+\\s*\\n\\s*version:\\s*(?<currentValue>[^\\n]+)"
      ],
      "versioningTemplate": "semver"
    }
  ],
  "customDatasources": {
    "oci-artifact": {
      "defaultRegistryUrlTemplate": "https://ocmtest.common.repositories.cloud.sap/v2/d032990/component-descriptors/{{packageName}}/tags/list",
      "transformTemplates": [
        "{ \"releases\": tags.( { \"version\": $ } ) }"
        ]
    }
  },
  "hostRules": [
    { 
      "matchHost": "https://ocmtest.common.repositories.cloud.sap",
      "username": "d032990",
      "password": "cmVmdGtuOjAxOjE3NzA0NjY2MTM6YVl3alZ1UGhlVXlWcmU5Tlc1eGVIY1d4elRn"
    }
  ],
  "logLevelRemap": [
    {
